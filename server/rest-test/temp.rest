###############################################################
# GET RANGE TESTS (QUERY VERSION)
###############################################################

### VALID REQUEST
GET http://localhost:3000/devices/1/data?from=2025-01-01T00:00:00.000Z&to=2025-12-10T00:00:00.000Z


### INVALID DEVICE ID (non-numeric)
GET http://localhost:3000/devices/abc/data?from=2025-01-01&to=2025-01-02


### INVALID DEVICE ID (0)
GET http://localhost:3000/devices/0/data?from=2025-01-01&to=2025-01-02


### INVALID DEVICE ID (negative)
GET http://localhost:3000/devices/-5/data?from=2025-01-01&to=2025-01-02


### MISSING 'from'
GET http://localhost:3000/devices/1/data?to=2025-01-02


### INVALID 'from' FORMAT
GET http://localhost:3000/devices/1/data?from=invalid-date&to=2025-01-02


### MISSING 'to'
GET http://localhost:3000/devices/1/data?from=2025-01-01


### INVALID 'to' FORMAT
GET http://localhost:3000/devices/1/data?from=2025-01-01&to=not-a-date


### FROM > TO (invalid range)
GET http://localhost:3000/devices/1/data?from=2025-01-10&to=2025-01-01


### DEVICE NOT FOUND
GET http://localhost:3000/devices/9999/data?from=2025-01-01&to=2025-01-02
